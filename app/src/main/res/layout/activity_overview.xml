<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eName"/>
        <EditText
            android:id="@+id/name"
            android:minWidth="100dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/name" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eGender"/>
        <EditText
            android:id="@+id/gender"
            android:minWidth="100dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/gender" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eDob"/>
        <EditText
            android:id="@+id/dob"
            android:minWidth="100dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/dob" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eAddress"/>
        <EditText
            android:id="@+id/address"
            android:minWidth="100dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/address" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ePostcode"/>
        <EditText
            android:id="@+id/postcode"
            android:minWidth="100dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/postcode" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eStudentNumber"/>
        <EditText
            android:id="@+id/studentNumber"
            android:minWidth="100dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/studentnumber" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eCourseTitle"/>
        <EditText
            android:id="@+id/courseTitle"
            android:minWidth="100dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/coursetitle" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eStartDate"/>
        <EditText
            android:id="@+id/startDate"
            android:minWidth="100dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/startdate" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eBursary"/>
        <EditText
            android:id="@+id/bursary"
            android:minWidth="100dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/bursary" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eEmail"/>
        <EditText
            android:id="@+id/email"
            android:minWidth="100dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/email" />
    </LinearLayout>
    <Button
        android:id="@+id/btnEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tEdit"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />
</LinearLayout>